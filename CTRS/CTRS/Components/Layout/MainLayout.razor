@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between">
            <span style="font-size: 1.2em;">歡迎 李大 先生</span>
            <button onclick="logout()" style="background-color: #bbafaf; color: white; border: none; padding: 8px 16px; border-radius: 10px;">登出</button>
